{% extends 'OutlandishAcadOowpBundle:Default:defaultPost.html.twig' %}

{% block mainContent %}

    {% if map | length > 0 %}
        <div class="google-map">
            <div class="map" data-marker="true" data-lat="{{ map.lat | raw  }}" data-lng="{{ map.lng | raw  }}" data-zoom="16"></div>
        </div>
    {% endif %}
    <article class="section">
        <div class="row">
            <div class="large-24 columns">
                {% block postTitle %}<h1>{{ post.title() | raw }}</h1>{% endblock %}
                {% if post.subtitle() %}
                    <p class="subtitle">{{ post.subtitle() }}</p>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="medium-24 columns">
                <div class="row">
                    <div class="large-20 columns">
                        {{ post.content() | raw }}
                    </div>
                </div>
            </div>
        </div>

        {% if map | length > 0 %}
            <div class="row">
                <div class="large-24 columns">
                    <h3 class="block-heading">
                        Address
                    </h3>
                    <div class="address large">
                        {{ address | raw }}
                    </div>
                </div>
            </div>
        {% endif %}

        {% if contact_people | length > 0 %}
            <h3 class="block-heading">
                Contacts
            </h3>
            <div class="row">

            {% for person in contact_people %}

                <div class="large-8 columns">
                                {% if person.name.content | length > 0 %}
                                    <p class="contact-name">
                                        {{ person.name.prefix }}
                                        {{ person.name.content }}
                                        {{ person.name.suffix }}
                                    </p>
                                {% endif %}
                                {% if person.phone.content | length > 0 %}
                                    <p>
                                        {{ person.phone.prefix }}
                                        {{ person.phone.content }}
                                        {{ person.phone.suffix }}
                                    </p>
                                {% endif %}
                                {% if person.email.content | length > 0 %}
                                    <p>
                                        {{ person.email.prefix }}
                                        {{ person.email.content }}
                                        {{ person.email.suffix }}
                                    </p>
                                {% endif %}
                    </div>

            {% endfor %}
            </div>


        {% endif %}
    </article>

{% endblock %}

{% block footer %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
{% endblock %}