<div class="section">
    <div class="row">
        <div class="large-24 columns">
            {% include "OutlandishAcadOowpBundle:Section:title.html.twig" %}
        </div>
    </div>
    <div class="row">
        <div class="large-24 columns">
            <ul class="large-block-grid-4">
                {% for item in section.items %}
                    {% if loop.index <= 3 %}
                        <li>{% include "OutlandishAcadOowpBundle:Default:item.html.twig" with {'item': item, 'image': 'none'} %}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>