{% if not classes %}{% set classes = 'main' %}{% endif %}

<div id="results">
    {% for type in connectedItems %}
        {% if type.items | length > 0 %}
            {% if type.title  %}
                <h3 class="block-heading">{{ type.title | raw }}</h3>
            {% endif %}
            <ul class="search-results">
                {% for item in type.items.posts %}
                    <li>
                        {% block itemInclude %}
                            {% include 'OutlandishAcadOowpBundle:Default:item.html.twig' with {
                            'item': item,
                            'excerpt_length': 'none',
                            'image':'avatar-square',
                            'classes' : classes} %}
                        {% endblock %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}
</div>

