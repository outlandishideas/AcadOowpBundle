{% if post.featuredImage('medium') %}
    <img class="avatar" src="{{ post.featuredImageUrl('small') }}" alt="{{ post.title() }} profile image">
{% else %}
    <img class="avatar no-profile" src="{{ asset('bundles/outlandishacadoowp/images/no-profile.png') }}" alt="No image for {{ post.title() }}">
{% endif %}