{% extends 'OutlandishAcadOowpBundle:Default:postAbstract.html.twig' %}

{% block content_main %}

    {# inherits from postAbstract so this just prints out the title and the content #}
    {{ parent() }}

    {% if connected_resources | length > 0 %}

        <h3 class="block-heading">Connected Resources</h3>
        <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3 block-grid-new-padding block-grid-link">
            {% for item in connected_resources %}
                <li>
                    <a href="{{ item.permalink() }}">
                        {{ item.featuredImage() | raw }}
                        <h4>{{ item.title() | raw }}</h4>
                    </a>
                </li>
            {% endfor %}
        </ul>

    {% endif %}

    {{ render(controller('OutlandishAcadOowpBundle:Search:renderRelatedResources', {
        'post': post,
        'request': request
    } )) }}

{% endblock %}

{% block content_sidebar %}

    {{ parent() }}
    {% for section in related_themes %}
        <section class="related-themes">
            <h3 class="block-heading">{{ section.title }}</h3>
            <ul>
                {% for item in section.items %}
                    <li>{% include 'OutlandishAcadOowpBundle:Default:item.html.twig' with {
                        'item': item,
                        'excerpt_length': 'none',
                        'image':'avatar-square',
                        'classes' : classes} %}</li>
                {% endfor %}
            </ul>
        </section>
    {% endfor %}

{% endblock %}