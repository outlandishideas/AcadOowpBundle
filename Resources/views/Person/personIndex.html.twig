{% extends '::layout.html.twig' %}

{% block content %}
    {% block peopleContent %}
    <div class="row">
        <div class="columns medium-{% if post.featuredImage('large') %}12{% else %}24{% endif %}">

            <h1>{{ post.title() | raw }}</h1>

            <div class="people-intro">
                {{ post.content() | raw }}
            </div>
        </div>
        {% if post.featuredImage('large') %}
            <div class="columns medium-12 medium-centered large-centered">
                {% block item_image %}
                   {% include 'OutlandishAcadOowpBundle:Partial:featuredImg.html.twig' with {'post': post } %}
                {% endblock %}
            </div>
        {% endif %}
    </div>
    {% endblock %}
    <div class="row">
        <div class="columns large-24">
            {% if roles | length > 0 %}
                <ul class="search-results people accordion">
                    {% for role in roles %}
                        <li class="accordion-item open">
                            {% block roleInclude %}
                                <a href="#" class="accordion-toggle">
                                    <h3 class="block-heading">{{ role.title() | raw }}</h3>
                                </a>

                                <div class="accordion-content">
                                    {{ role.content() | raw }}
                                    <div class="people-items">
                                        <ul class="small-block-grid-2 medium-block-grid-4 large-block-grid-6">
                                            {% for person in role.people %}
                                                <li>
                                                    {% block personInclude %}
                                                        {% include 'OutlandishAcadOowpBundle:Person:personItem.html.twig' with {
                                                        'item': person,
                                                        'size': 'small' } %}
                                                    {% endblock %}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            {% endblock %}
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <ul class="search-results people no-roles">
                    {% for person in people %}
                        <li>
                            {% block itemInclude %}
                                {% include 'OutlandishAcadOowpBundle:Person:personItem.html.twig' with {
                                'item': person,
                                'size': 'small'} %}
                            {% endblock %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>

{% endblock %}