{% if socialmedia | length > 0 %}
    <div class="share">
        <div class="row">
            <div class="large-24 columns">
                <hr>
                <h3 class="block-heading">Follow us</h3>
                <ul class="social">
                    {% for media in socialmedia %}
                        <li>
                            <a title="{{ media.title }}" href="{{ media.url }}">
                                 <span class="fa-stack fa-lg">
                                  <i class="fa fa-circle fa-stack-2x"></i>
                                  <i class="fa {{ media.type }} fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endif %}