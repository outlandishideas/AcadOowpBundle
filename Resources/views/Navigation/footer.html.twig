{% block footer_main %}

    <div class="row">
        <div class="large-6 columns">
            <div id="useful-links">
                <hr>
                {% block footer_navigation %}
                    <h3 class="block-heading">Navigation</h3>
                    <nav>
                        <ul>
                            {% for page in pages %}
                                <li><a class="font-theme-colour" href="{{ page.permalink() | raw }}">{{ page.title() | raw }}</a></li>
                            {% endfor %}
                        </ul>
                    </nav>
                {% endblock %}
            </div>
        </div>
        <div class="large-6 columns">
            <hr>
            {% if newsItems.posts %}
                <h3 class="block-heading">News</h3>
                {% set item = newsItems | first  %}
                {% include 'OutlandishAcadOowpBundle:Default:defaultItem.html.twig' with {
                'item': item,
                'classes': 'main',
                'image': 'none'} %}
            {% elseif eventItems.posts %}
                <h3 class="block-heading">Events</h3>
                {% set item = eventItems | last  %}
                {% include 'OutlandishAcadOowpBundle:Default:defaultItem.html.twig' with {
                'item': item,
                'classes': 'main',
                'image': 'none'} %}
            {% endif %}
        </div>
        <div class="large-6 columns">
            <hr>
            {% if eventItems.posts %}
                <h3 class="block-heading">Events</h3>
                {% set item = eventItems | first  %}
                {% include 'OutlandishAcadOowpBundle:Default:defaultItem.html.twig' with {
                'item': item,
                'classes': 'main',
                'image': 'none'} %}
            {% elseif newsItems.posts %}
                <br>
                {% set item = newsItems | last %}
                {% include 'OutlandishAcadOowpBundle:Default:defaultItem.html.twig' with {
                'item': item,
                'classes': 'main',
                'image': 'none'} %}
            {% endif %}
        </div>
        <div class="large-6 columns">
            <div class="get-in-touch">
                <hr>
                <h3 class="block-heading">Get in touch</h3>
                {% block footer_address %}

                    <p>
                        <span><a href="mailto:{{ email | raw }}">{{ email | raw }}</a></span><br/>
                        <span>{{ phonenumber | raw }}</span>
                    </p>

                    <p>{{ address | raw }}</p>

                {% endblock %}
                {% include "OutlandishAcadOowpBundle:Partial:social.html.twig" with {
                'post': post,
                'title': 'event'} %}
            </div>
        </div>
    </div>

{% endblock %}

<div id="copyright">
    <div class="row">
        <div class="large-6 columns pull-left">
            <p>&copy; State Crime 2014</p>
        </div>
        <div class="large-6 columns pull-right">
            <p>An Outlandish website</p>
        </div>
    </div>
</div>