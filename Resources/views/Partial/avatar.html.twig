{% if size is not defined %}
    {%  set size = 'small' %}
{% endif %}

{% if post.featuredImage( size ) %}
    <img class="avatar {{ classes }}" src="{{ post.featuredImageUrl( size ) }}" alt="{{ post.title() }} profile image">
{% else %}
    <img class="avatar no-profile {{ classes }}" src="{{ asset('bundles/outlandishacadoowp/images/no-profile.png') }}" alt="No image for {{ post.title() }}">
{% endif %}