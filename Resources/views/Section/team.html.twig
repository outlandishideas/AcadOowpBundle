<div class="section">
    <div class="row">
        <div class="large-24 columns">
            <h2>{{ section.title }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="large-24 columns">
            <ul class="large-block-grid-4">
                {% for item in section.items %}
                    {% if loop.index <= 3 %}
                        <li>
                            <a href="{{ item.permalink() }}" class="post-item">
                                <h3>{{ item.title() }}</h3>
                                <p>{{ item.excerpt() }}</p>
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>