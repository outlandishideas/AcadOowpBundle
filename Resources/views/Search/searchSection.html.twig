{% block searchResultsContent %}
    {% if featuredItem %}
        {% block featuredItemContent %}
            {% include "OutlandishAcadOowpBundle:Item:featuredItem.html.twig" with {'item': featuredItem} %}
        {% endblock %}
    {% endif %}
    <h2>{{ search.found_posts }} Results
        {% if search.query_vars.s %}
            : <span class="search-query">"{{ search.query_vars.s }}"</span>
        {% endif %}
    </h2>
    {% include "OutlandishAcadOowpBundle:Search:searchResults.html.twig" %}
{% endblock %}