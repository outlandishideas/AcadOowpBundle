{% extends '::layout.html.twig' %}

{% block content %}
    <div class="section">
        <div class="row">
            <div class="large-10 columns">
                <div class="main-content">
                    {{ post.content() | raw }}
                </div>
            </div>
            <div class="large-14 columns">
                {{ post.featuredImage("large") | raw }}
            </div>
        </div>
    </div>
    {% for section in sections %}
        {% if section.items | length > 1 %}
            <div class="section">
                <div class="row">
                    <div class="large-24 columns">
                        <h2>{{ section.title }}</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="large-12 columns">
                        {% set item = section.items | first  %}
                        {% include 'OutlandishSiteBundle:Default:defaultItem.html.twig' with {
                            'item': item,
                            'classes': 'main',
                            'image': 'large'} %}
                    </div>
                    <div class="large-12 columns">
                        {% for item in section.items %}
                            {% if not loop.first and loop.index <= 4 %}
                                {% include 'OutlandishSiteBundle:Default:defaultItem.html.twig' with {'item': item, 'classes': ''} %}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}