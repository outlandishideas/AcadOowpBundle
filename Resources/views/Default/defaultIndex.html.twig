{% extends '::layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="columns large-14">

            <h1>{{ post.title() | raw }}</h1>

            {{ post.content() | raw }}

        </div>
    </div>

    {% if items | length > 0 %}

        {% if featuredItem %}

        {% endif %}

        <div class="row">

            <div class="columns large-16">

                <div class="row">
                    <div class="columns large-24">
                        <div class="sort-filter">
                            Sort by <a href="#" class="selected">Date</a><a href="#">Relevance</a><a href="#">Popularity</a>
                        </div>
                    </div>
                </div>

                <div id="results">
                    {% for element in search_form %}
                        {{ element | raw }}
                    {% endfor %}
                    <ul id="page-1" class="search-results">
                        {% include 'OutlandishAcadOowpBundle:Default:items.html.twig' %}
                    </ul>
                </div>

            </div>

            <div class="columns large-7">
                {% if sideItems | length > 0 %}
                <h2>Other Content</h2>
                <ul class="search-results sidebar">
                    {% for type in sideItems %}
                        {% if type.items | length > 0 %}
                            <li>
                                <hr>
                                <h3 class="block-heading">{{ type.title }}</h3>
                                <ul>
                                    {% for item in type.items %}
                                        {% block itemIncludeSide %}
                                            {% include 'OutlandishAcadOowpBundle:Default:defaultItem.html.twig' with {
                                            'item': item,
                                            'excerpt_length': 150,
                                            'classes' : 'main image-overlay dark'} %}
                                        {% endblock %}
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
                {% endif %}
            </div>

        </div>

    {% elseif sections | length > 0 %}
        {% for section in sections %}
            {% include 'OutlandishAcadOowpBundle:Section:' ~ section.layout ~ '.html.twig' %}
        {% endfor %}
    {% endif %}



{% endblock %}